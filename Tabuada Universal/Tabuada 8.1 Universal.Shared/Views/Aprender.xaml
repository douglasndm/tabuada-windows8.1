            <HubSection Header="dividindo por 3">
                <DataTemplate>
                    <Grid>
                        <ScrollViewer Margin="0" Grid.ColumnSpan="3" d:LayoutOverrides="LeftPosition, RightPosition">
                            <TextBlock x:Name="dividindoPor3" TextWrapping="Wrap" Foreground="Black" FontSize="22.667">
                                <Run Text="um número é divisível por 3 quando a soma de todos seus algarismos fo rum múltiplo de 3."/>
