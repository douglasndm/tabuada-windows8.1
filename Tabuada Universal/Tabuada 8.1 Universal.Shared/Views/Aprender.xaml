							    <Run/>
							    <LineBreak/>
							    <Run Text="3 + 2 + 5 + 8 = 18. 18 é multiplo de 3, então 3258 também é"/>
							    <LineBreak/>
							    <Run/>
                            </TextBlock>
                        </ScrollViewer>
                    </Grid>
                </DataTemplate>
            </HubSection>

            <HubSection Header="dividindo por 4">
                <DataTemplate>
                    <Grid>
                        <ScrollViewer Margin="0" Grid.ColumnSpan="3" d:LayoutOverrides="LeftPosition, RightPosition">
