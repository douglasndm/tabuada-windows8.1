                            <TextBlock x:Name="dividindoPor2" TextWrapping="Wrap" Text="Um número é divisível por 6 quando ele for divisível por 2 e 3 ao mesmo tempo" Foreground="Black" FontSize="22.667"/>
                        </ScrollViewer>
                    </Grid>
                </DataTemplate>
            </HubSection>

            <HubSection Header="dividindo por 8">
                <DataTemplate>
                    <Grid>
                        <ScrollViewer Margin="0" Grid.ColumnSpan="3" d:LayoutOverrides="LeftPosition, RightPosition">
